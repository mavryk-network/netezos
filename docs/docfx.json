{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "*.csproj"
          ],
          "src": "../Netmavryk/"
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "toc.yml"
        ]
      },
      {
        "files": [
          "api/*.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "docs/*.md",
          "docs/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "fonts/*"
        ]
      },
      {
        "files": [
          "images/*"
        ]
      },
      {
        "files": [
          "favicon-16x16.png",
          "favicon-32x32.png",
          "favicon.ico",
          "logo.svg",
          "logo.png",
          "index.html",
          "CNAME"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Netmavryk",
      "_appFooter": "Copyright Â© Baking Bad",
      "_appLogoPath": "logo.svg",
      "_enableNewTab": true,
      "_enableSearch": true,
      "_gitContribute": { "branch": "master" },
      "_gitUrlPattern": "github"
    },
    "template": [
      "default",
      "templates/netmavryk"
    ],
    "markdownEngineName": "markdig",
    "sitemap": {
      "baseUrl": "https://netmavryk.mavryk.org/",
      "changefreq": "monthly",
      "priority": 0.5,
      "fileOptions": {
        "docs/*.md": {
          "changefreq": "weekly",
          "priority": 1
        }
      }
    },
    "dest": "_site"
  }
}
